<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id='ir_cron_create_send_expiry_notices' model='ir.cron'>
            <field name='name'>Credit: send expiry notices</field>
            <field name='model_id' ref='model_extenss_credit'/>
            <field name='state'>code</field>
            <field name='code'>model.send_expiry_notices()</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name='numbercall'>-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True" />
            <field name="nextcall" eval="(DateTime.now().replace(hour=23, minute=59) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>